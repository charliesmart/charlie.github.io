
{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
      "browser": true,
      "es6": true
  },
  "rules": {
    "no-console": "off",
    "eqeqeq": "warn",
    "no-magic-numbers": ["warn", {"ignore": [1, -1, 0, 2]}],
    "indent": ["error", 2],
    "new-cap": "warn",
    "no-tabs": "error",
    "no-trailing-spaces": "error",
    "prefer-arrow-callback": "warn",
    "prefer-template": "warn",
    "no-var": "warn",
    "no-unused-vars": "warn",
    "new-cap": "off",
    "no-unused-vars": "off",
    "react/prop-types": [2, { "ignore": ["children"], "skipUndeclared": true }]
  }
}
